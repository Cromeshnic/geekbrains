<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="form" method="POST">
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="Title:" width="100px"/>
                    <g:TextBox name="title" ui:field="titleText"/>
                </g:HorizontalPanel>
                <g:ListBox name="statusId">
                    <g:item value="0">Open</g:item>
                    <g:item value="1">In progress</g:item>
                    <g:item value="2">Closed</g:item>
                </g:ListBox>
                <g:Button ui:field="btnSubmit">Create</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>